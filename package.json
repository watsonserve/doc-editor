{
  "name": "doc-editor",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "@what/connector",
    "@what/doc",
    "@what/editor"
  ],
  "scripts": {
    "upc": "yarn workspace @what/connector build",
    "upe": "yarn workspace @what/editor build",
    "start": "yarn workspace @what/doc start",
    "build": "yarn up && yarn workspace @what/doc build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
